{
    "name": "caasi-co-zw/form-validation",
    "description": "Simple, extendable form validator for multi-dimensional forms",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "madesimple/php-arrays": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Scopes",
            "email": "peter.scopes@gmail.com"
        },
        {
            "name": "Isaac Machakata",
            "email": "isaac@caasi.co.zw"
        }
    ],
    "autoload": {
        "psr-4": {
            "MadeSimple\\Validator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MadeSimple\\Validator\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "scripts-descriptions": {
        "test": "Run unit and integration tests"
    }
}
