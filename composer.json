{
	"name": "caasi-co-zw/form-validation",
	"description": "Simple, extendable form validator for multi-dimensional forms",
	"type": "library",
	"require": {
		"php": ">=7.1",
		"madesimple/php-arrays": "^2.0",
		"madesimple/php-form-validator": "^2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "Isaac Machakata",
			"email": "isaac@caasi.co.zw"
		}
	],
	"autoload": {
		"psr-4": {
			"Caasi\\Validation\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Caasi\\Validation\\Test\\": "tests/"
		}
	},
	"config": {
		"sort-packages": true
	}
}
